.ask_reply {
  position: relative;
  display: block;
  margin: 1.5em 0;
  padding: 7px 10px;
  min-width: 120px;
  max-width: 100%;
  color: #555;
  width: 60%;
  font-size: 16px;
  background: #fff;
  border-radius: 15px;
}

.ask_reply:before {
  content: "";
  position: absolute;
  top: 10%%;
  left: -5px;
  margin-left: -15px;
  border: 10px solid transparent;
  border-right: 15px solid #fff;
}


li.ask_reply{
  margin: 20px auto; 
}


textarea#comment_content {
    width: 205px;
}
.commentarea{
  text-align:center;
}

.ask_show_title {
    display:flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 20px;
    margin-top: 20px;
}

.ask_show_title::before,
.ask_show_title::after {
  content: "";
  border-top: 2px solid #fff;
  flex-grow: 0.2;
}
.ask_show_title::before{
  margin-right: 1rem;
}

.ask_show_title::after{
  margin-left: 1rem;
}

form{
  display: flex;
  flex-direction: column;
  align-items: center;
