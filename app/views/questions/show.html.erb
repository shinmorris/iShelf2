<header>
<div class="navibar">
<ul id="flip3" class="dropmenu">
<li>
<div class="topmenu batten">
<span></span>
</div>
<ul>
<li><%= link_to "MY PHOTOS",users_path, :class =>  "entry_text"%></li>
<li><%= link_to "ENTRY",entry_posts_path, :class =>  "entry_text"%></li>
<li><%= link_to "HOME",root_path, :class =>  "entry_text"%></li>
<li><%= link_to "LOGOUT",users_sign_out_path, method: :delete %></li>
</header>

<div class="bbbbbody">
  <div class="stackshow">
    <ul>
        <li><%=image_tag(@question.ask_image.to_s, :size => '480x270',:alt =>"")%></li>
        <div class = "ask_show_title">質問内容</div>
        <li><%=@question.ask_title%></li>
        <li><%=@question.ask_content%></li>
    </ul>
  </div>
  <div class="commentarea">
    <% if user_signed_in? %>
      <%= form_with(model: [@question, @comment], local: true) do |f| %>
        <%= f.text_area :content, class: "form-control", rows: 5 ,placeholder: "コメントを入力してください"%>
        <%= button_tag type: "submit", class: "comment_button" do %>
            コメントする
        <% end %>
        <% end %>
      <% end %>
  </div>


  <h2>コメント一覧</h2>
  <ul>
    <% @comments.each do |c| %> 
      <li class = "ask_reply">
        <%= c.content %>
      </li>
    <% end %> 
  </ul>




<style>

